<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <Button
        android:id="@+id/Launcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/out_margin"
        android:layout_marginTop="@dimen/out_margin"
        android:layout_marginRight="@dimen/out_margin"
        android:layout_marginBottom="@dimen/inner_margin"
        android:layout_weight="1"
        android:background="@drawable/buttons"
        android:text="@string/Launcher"
        android:textColor="@color/textColor"
        android:textColorHighlight="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textColorLink="@color/textColor"
        android:textSize="@dimen/Type_TextSize" />

    <Button
        android:id="@+id/App"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/out_margin"
        android:layout_marginTop="@dimen/inner_margin"
        android:layout_marginRight="@dimen/out_margin"
        android:layout_marginBottom="@dimen/out_margin"
        android:layout_weight="1"
        android:background="@drawable/buttons"
        android:text="@string/App"
        android:textColor="@color/textColor"
        android:textColorHighlight="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textColorLink="@color/textColor"
        android:textSize="@dimen/Type_TextSize" />

</LinearLayout>