<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    app:startDestination="@id/typeChooseFragment">

    <fragment
        android:id="@+id/typeChooseFragment"
        android:name="ru.realityfamily.statecontrol.Fragments.TypeChooseFragment"
        android:label="TypeChooseFragment" >
        <action
            android:id="@+id/ToApp"
            app:destination="@id/appFragment" />
        <action
            android:id="@+id/ToLauncher"
            app:destination="@id/launcherFragment" />
    </fragment>
    <fragment
        android:id="@+id/appFragment"
        android:name="ru.realityfamily.statecontrol.Fragments.AppFragment"
        android:label="AppFragment" />
    <fragment
        android:id="@+id/launcherFragment"
        android:name="ru.realityfamily.statecontrol.Fragments.LauncherFragment"
        android:label="fragment_launcher"
        tools:layout="@layout/fragment_launher" />
</navigation>